@using PagedList;
@using PagedList.Mvc;

@model IPagedList<AICRDWEB.Models.Circuitos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Region.NombreRegion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NombreCircuito)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Region.NombreRegion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCircuito)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdCircuito }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdCircuito }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdCircuito })
        </td>
    </tr>
}
   

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))